<!doctype html>
<html lang="tr">
<head>
    <title>Multi-TV</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <script src="https://unpkg.com/htmx.org@1.7.0/dist/htmx.min.js"></script>
    <script src="https://unpkg.com/htmx.org/dist/ext/json-enc.js"></script>
    <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Multi-TV</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Grid Layout
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="#" hx-get="/update?channelCount=4" hx-target="#iframeContainer" hx-swap="outerHTML" hx-trigger="click" hx-push-url="false">2x2</a></li>
                            <li><a class="dropdown-item" href="#" hx-get="/update?channelCount=9" hx-target="#iframeContainer" hx-swap="outerHTML" hx-trigger="click" hx-push-url="false">3x3</a></li>
                            <li><a class="dropdown-item" href="#" hx-get="/update?channelCount=12" hx-target="#iframeContainer" hx-swap="outerHTML" hx-trigger="click" hx-push-url="false">3x4</a></li>
                            <li><a class="dropdown-item" href="#" hx-get="/update?channelCount=16" hx-target="#iframeContainer" hx-swap="outerHTML" hx-trigger="click" hx-push-url="false">4x4</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="iframeContainer" class="iframe-container" ondrop="drop(event)" ondragover="allowDrop(event)">
        {{template "content" .}}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="/static/scripts.js"></script>
    <script>
        document.body.addEventListener('htmx:beforeSwap', function(evt) {
            if (evt.detail.target.id === 'iframeContainer') {
                evt.detail.shouldSwap = false;
                const newContainer = evt.detail.serverResponse;
                preserveVideoContent(newContainer);
            }
        });

        function preserveVideoContent(newContainerHTML) {
            const oldContainer = document.getElementById('iframeContainer');
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = newContainerHTML;
            const newContainer = tempDiv.firstElementChild;

            const oldBoxes = oldContainer.querySelectorAll('.iframe-box');
            const newBoxes = newContainer.querySelectorAll('.iframe-box');

            oldBoxes.forEach((oldBox, index) => {
                if (index < newBoxes.length) {
                    const iframe = oldBox.querySelector('iframe');
                    if (iframe) {
                        newBoxes[index].innerHTML = oldBox.innerHTML;
                    }
                }
            });

            oldContainer.innerHTML = newContainer.innerHTML;
            adjustIframeSizes(); // Call this function after updating the container
        }
    </script>
</body>
</html>
